<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="grade/report/rubrics/db" VERSION="2025072400" COMMENT="Install file for custom rubric dashboard plugin" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../lib/xmldb/xmldb.xsd">
    <TABLES>

        <TABLE NAME="rubric_grade_edits" COMMENT="Logs of manual rubric score edits by teachers.">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="The student ID"/>
                <FIELD NAME="submissionid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Assign_submission.id"/>
                <FIELD NAME="criterionid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Rubric criterion ID"/>
                <FIELD NAME="oldscore" TYPE="number" LENGTH="10" DECIMALS="2" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="newscore" TYPE="number" LENGTH="10" DECIMALS="2" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="comment" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Optional teacher comment about change"/>
                <FIELD NAME="editorid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="The teacher who made the edit"/>
                <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Timestamp of edit"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="rubricedit_userid_idx" UNIQUE="false" FIELDS="userid"/>
                <INDEX NAME="rubricedit_submission_idx" UNIQUE="false" FIELDS="submissionid"/>
            </INDEXES>
        </TABLE>

    </TABLES>
</XMLDB>

